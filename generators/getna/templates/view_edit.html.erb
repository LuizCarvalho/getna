<h1>Alterar <%= object_name[:single].humanize %></h1>

<%%= error_messages_for :<%= object_name[:single] %> %>

<%% form_for(@<%= object_name[:single] %>) do |f| %>
<% for attribute in attributes -%>
  <p>
    <b><%= attribute[:name].humanize %></b><br />
    <%%= f.<%= attribute[:type] %> :<%= attribute[:name] %> %>
  </p>

<% end -%>
  <p>
    <%%= f.submit "Atualizar" %>
  </p>
<%% end %>

<%%= link_to 'Mostrar', @<%= object_name[:single] %> %> |
<%%= link_to 'Voltar', <%= object_name[:plural] %>_path %>
